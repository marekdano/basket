<div class="container">
  <h1>Items</h1>
  <h4>Choose an item and add it to your basket.</h4>

  <table class="table table-striped">
    <thead>
      <th>Name</th>
      <th>Price</th>
      <th></th>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><a href="#" class="btn btn-info">Add to basket</a>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>





